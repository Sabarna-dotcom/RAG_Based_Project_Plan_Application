{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ZomaProjectPlan",
  "type": "object",
  "required": [
    "opportunity_id",
    "phases",
    "total_duration_days",
    "notes"
  ],
  "properties": {
    "opportunity_id": {
      "type": "string",
      "minLength": 1
    },
    "total_duration_days": {
      "type": "integer",
      "minimum": 1
    },
    "phases": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "duration_days",
          "dependencies"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^PH-[0-9]{3}$"
          },
          "name": {
            "type": "string",
            "minLength": 3
          },
          "duration_days": {
            "type": "integer",
            "minimum": 1,
            "maximum": 60
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^PH-[0-9]{3}$"
            },
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    },
    "notes": {
      "type": "string",
      "maxLength": 2000
    }
  },
  "additionalProperties": false
}